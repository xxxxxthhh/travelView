/**
 * Supabase 配置文件
 *
 * 使用说明：
 * 1. 复制这个文件为 supabase.js（去掉 .example 后缀）
 * 2. 填入你的 Supabase 项目凭证
 * 3. supabase.js 已在 .gitignore 中，不会被提交
 */

const SUPABASE_CONFIG = {
    // 从 Supabase Dashboard -> Settings -> API 获取
    url: 'YOUR_SUPABASE_URL',  // 例如：https://xxxxx.supabase.co
    anonKey: 'YOUR_SUPABASE_ANON_KEY'  // 以 eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9 开头的长字符串
};

// 创建 Supabase 客户端
const supabase = window.supabase.createClient(
    SUPABASE_CONFIG.url,
    SUPABASE_CONFIG.anonKey
);

// 导出全局使用
window.supabaseClient = supabase;
window.SUPABASE_CONFIG = SUPABASE_CONFIG;
